citHeader("To cite glca in publications use:")

citEntry(
  entry    = "Manual",
  title    = "{glca}: An {R} Package for Multiple-Group Latent Class Analysis",
  author   = personList(person(given = "Youngsun", family = "Kim"),
                        person(given = "Hwan", family = "Chung")),
  year     = "2021",
  note     = "{R}~package version~1.3.3",
  url      = "https://kim0sun.github.io/glca/",
  textVersion = paste(
    "Kim, Youngsun and Chung, Hwan (2020).",
    "glca: An R Package for Multiple-Group Latent Class Analysis.",
    "https://kim0sun.github.io/glca."
  )
)
